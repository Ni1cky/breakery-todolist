<Task>:
    task_checkbox: task_checkbox
    task_input_field: task_input_field
    make_imp_btn: make_imp_btn
    menu_btn: menu_btn
    canvas:
        Color:
            rgba: 0, 0.31, 0.88, 0.7
        RoundedRectangle:
            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
            pos: self.pos
            size: self.size
    orientation: "horizontal"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        size_hint: 0.1, 1
        MDCheckbox:
            size: "58dp", "58dp"
            selected_color: "#FFFC00"
            unselected_color: 1, 1, 1, 1
            on_press: root.mark_done()
            id: task_checkbox
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        size_hint: 0.7, 1
        MDTextField:
            font_size: self.height // 2.5
            theme_text_color: 'Custom'
            line_color_normal: 0, 0.31, 0.88, 0
            line_color_focus: "#FFF9BA"
            text_color_normal: 1, 1, 1, 1
            text_color_focus: "#FFF9BA"
            hint_text: "Название задачи"
            hint_text_color_normal: 1, 1, 1, 1
            hint_text_color_focus: 1, 1, 1, 0
            id: task_input_field
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        size_hint: 0.1, 1
        MDIconButton:
            icon: 'cards-heart-outline'
#            icon: 'cards-heart'
#            text_color: "#FF0000"
            theme_text_color: 'Custom'
            text_color: "#FFFFFF"
            on_press: root.make_important()
            id: make_imp_btn
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        size_hint: 0.1, 1
        MDIconButton:
            icon: 'delete'
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            on_press: root.delete()
            id: delete_btn
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        size_hint: 0.1, 1
        MDIconButton:
            icon: 'dots-vertical'
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            on_press: root.open_additional_info()
            id: menu_btn


<TasksMenuDrawer>:
    task_text_field: task_text_field
    done_checkbox: done_checkbox
    deadline_label: deadline_label
    important_button: important_button
    priority_label: priority_label
    orientation: "vertical"
    state: "close"
    md_bg_color: 1, 1, 1, 1
    anchor: "right"
    MDTextField:
        id: task_text_field
        hint_text: "Переименовать"
        font_size: 20
        line_color_focus: 0, 0, 0, 1
        hint_text_color_focus: 0, 0, 0, 1
        text_color_normal: 0, 0, 0, 1
        text_color_focus: 0, 0, 0, 1
        on_text: root.change_task_text()
    MDBoxLayout:
        size_hint_y: 0.3
        orientation:"vertical"
        MDBoxLayout:
            orientation: "horizontal"
            AnchorLayout:
                size_hint_x: 0.8
                MDLabel:
                    valign: "center"
                    halign: "left"
                    text: "Выполнено"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 0.7
            AnchorLayout:
                size_hint_x: 0.2
                MDCheckbox:
                    id: done_checkbox
                    valign: "center"
                    halign: "center"
                    selected_color: "#00BFFF"
                    unselected_color: 0, 0, 0, 1
                    on_press: root.mark_done()
        MDBoxLayout:
            orientation: "horizontal"
            AnchorLayout:
                size_hint_x: 0.8
                MDLabel:
                    halign: "left"
                    valign: "center"
                    text: "Важно"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 0.7
            AnchorLayout:
                size_hint_x: 0.2
                MDIconButton:
                    pos_hint: {"center_x": .5, "center_y": .5}
                    icon: 'cards-heart-outline'
                    id: important_button
                    on_press: root.make_important()
                    theme_text_color: 'Custom'
                    text_color: "#000000"
    MDBoxLayout:
        size_hint_y: 0.15
        orientation:"horizontal"
        AnchorLayout:
            size_hint_x: 0.8
            MDLabel:
                id: deadline_label
                halign: "left"
                text: "Дедлайн "
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 0.7
        AnchorLayout:
            size_hint_x: 0.2
            MDIconButton:
                icon: "calendar"
                on_press: root.open_calendar()
    MDBoxLayout:
        size_hint_y: 0.15
        AnchorLayout:
            size_hint_x: 0.8
            MDLabel:
                id: priority_label
                halign: "left"
                text: "Приоритетность"
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 0.7
        AnchorLayout:
            size_hint_x: 0.2
            MDIconButton:
                pos_hint: {"center_x": .5, "center_y": .5}
                icon: "playlist-edit"
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 0.7
                on_press: root.open_priority_menu(self)
    MDBoxLayout:
        size_hint_y: 0.3
        # заглушка


<ScrollViewTasksList>:
    screens_list: screens_list
    ScrollView:
        MDList:
            id: screens_list


<MenuButton>:
    theme_text_color: "Custom"
    text_color: 0, 0, 0, 1
    icn: ""
    on_press: self.change_screen()
    IconLeftWidgetWithoutTouch:
        icon: root.icn
        theme_text_color: "Custom"
        text_color: 0, 0, 0, 1


<UpperMenuLayout>:
    start_button: tasks_button
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"
    MDLabel:
        text: "ToDo List"
        font_style: "Button"
        font_size: 20
        size_hint_y: None
        height: self.texture_size[1]
    MDLabel:
        text: "Авторы: Nicky, !!!, GOGX31, VadLord, RegreTTO, dion, Хитрый Страус"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]
    MenuButton:
        id: tasks_button
        screen_name: "tasks"
        icn: "home"
        text: "Задачи"
    MenuButton:
        id: done_tasks_button
        screen_name: "done_tasks"
        icn: "check-circle-outline"
        text: "Сделано"
    MenuButton:
        id: important_button
        screen_name: "important"
        icn: "cards-heart"
        text: "Важно"
    MenuButton:
        id: my_day_button
        screen_name: "my_day"
        icn: "calendar"
        text: "Мой день"


<LowerMenuLayout>:
    task_screens_scroll_view: task_screens_scroll_view

    orientation: "vertical"
    ScrollViewTasksList:
        id: task_screens_scroll_view
        new_list_field: new_list_field
    MDBoxLayout:
        orientation: "horizontal"
        MDTextField:
            id: new_list_field
            hint_text: "Введите название списка"
            on_text_validate: task_screens_scroll_view.add_new_list()
            multiline: False
            line_color_focus: 0, 0, 0, 1
            hint_text_color_focus: 0, 0, 0, 1
            text_color_normal: 0, 0, 0, 1
            text_color_focus: 0, 0, 0, 1
        MDIconButton:
            on_press: task_screens_scroll_view.add_new_list()
            icon:"plus"


<MainMenuLayout>:
    upper: upper
    lower: lower
    nav_bar: nav_bar
    orientation: "vertical"
    halign: "top"
    md_bg_color: 1, 1, 1, 1
    state: "close"
    id: nav_bar
    UpperMenuLayout:
        id: upper
        size_hint_y: 0.65
    LowerMenuLayout:
        id: lower
        size_hint_y: 0.35


<MainContainer>:
    screen_manager: screen_manager
    main_menu: main_menu
    toolbar: toolbar
    orientation: "vertical"
    ToolBar:
        id: toolbar
        size_hint_y: 64 / root.height
    MDNavigationLayout:
        ScreenManager:
            id: screen_manager
            TasksScreen:
                calling_button: main_menu.upper.start_button
                name: "tasks"
            TasksScreen:
                name: "done_tasks"
            TasksScreen:
                name: "important"
            TasksScreen:
                name: "my_day"
        MainMenuLayout:
            id: main_menu


<ToolBar>:
    search_text_field: search_text_field
    left_toolbar: ltbr
    MDToolbar:
        id: ltbr
        size_hint_x: 0.45
        left_action_items: [["menu", root.open_menu]]
        theme_text_color: "Custom"
        icon_left_color: 1, 0, 0, 1
    AnchorLayout:
        size_hint_x: 0.3
        canvas:
            Color:
                rgba: 0.129, 0.588, 0.953, 1
            Rectangle:
                pos: self.pos
                size: self.size
        anchor_x: "center"
        anchor_y: "top"
        MDTextField:
            id: search_text_field
            theme_text_color: 'Custom'
            color_active: 0.129, 0.588, 0.953, 1
            mode: "fill"
            fill_color_normal: 0.129, 0.588, 0.953, 1
            fill_color_focus: 0.129, 0.588, 0.953, 1
            text_color_normal: 1, 1, 1, 1
            text_color_focus: 1, 1, 1, 1
            font_size: self.height // 2.9
            line_color_focus: 1, 1, 1, 1
            hint_text: "Найти задачу"
            hint_text_color_normal: 1, 1, 1, 1
            on_text: root.search_task()
    MDToolbar:
        size_hint_x: 0.25
        right_action_items: [["sort", root.open_sort_menu], ["brush", root.open_theme_menu]]


<RightContentCls@OneLineAvatarIconListItem>
    left_icon: ""
    text: ""
    IconLeftWidget:
        icon: root.left_icon


<TasksScreen>:
    tasks: tasks
    info_drawer: info_drawer
    ScrollView:
        size: self.size
        do_scroll_y: True
        GridLayout:
            id: tasks
            padding: 5, 5
            cols: 1
            spacing: 10
            orientation: "bt-lr"
            row_default_height: 80
            size_hint_y: None
            height: self.minimum_height
    AnchorLayout:
        anchor_x: "right"
        anchor_y: "bottom"
        size_hint: 0.98, 0.98
        pos_hint: {'y': 0.02}
        MDIconButton:
            icon: "plus"
            md_bg_color: rgba(128, 166, 255, 255)
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            user_font_size: "45sp"
            on_press: root.add_new_task()
    MDNavigationLayout:
        TasksMenuDrawer:
            id: info_drawer
